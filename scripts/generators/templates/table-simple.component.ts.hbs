/**
 * {{pascalCase entityName}} Table Component (TanStack Query)
 */

import { Component, signal, inject, computed } from '@angular/core';
import { Router } from '@angular/router';
import { CommonModule } from '@angular/common';
import { injectQuery } from '@tanstack/angular-query-experimental';

import { DataTableComponent } from '../../shared/components/data-table/data-table.component';
import { PreviewDialogComponent, PreviewField } from '../../shared/components/preview-dialog/preview-dialog.component';
import { TableConfig, TableColumn, TableAction } from '../../shared/components/data-table/data-table.types';
import type { {{pascalCase entityName}}Response } from '@/core/api/generated';
import { {{camelCase apiFunction}}Options } from '@/core/api/generated/@tanstack/angular-query-experimental.gen';

@Component({
  selector: 'app-{{kebabCase entityPluralName}}-table',
  standalone: true,
  imports: [CommonModule, DataTableComponent, PreviewDialogComponent],
  template: `
    <div class="container mx-auto px-4 py-8">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">{{pascalCase entityPluralName}}</h1>
        <p class="mt-2 text-gray-600">Manage and view {{lowerCase entityName}} information</p>
      </div>

      <app-data-table
        [data]="{{camelCase entityPluralName}}()"
        [config]="tableConfig()"
        [loading]="loading()"
        (rowClick)="onRowClick($event)"
      />

      <app-preview-dialog
        [isOpen]="previewDialogOpen()"
        [title]="'{{pascalCase entityName}} Details'"
        [fields]="previewFields()"
        (close)="closePreview()"
      />

      @if (error()){
      <!-- Error message -->
      <div class="mt-4 rounded-md bg-red-50 p-4">
        <p class="text-red-600">\{{ error() }}</p>
      </div>
      }
    </div>
  `,
})
export class {{pascalCase entityPluralName}}TableComponent {
  private readonly router = inject(Router);

  private {{camelCase entityPluralName}}Query = injectQuery(() =>
    {{camelCase apiFunction}}Options({ query: { pageNumber: 1, pageSize: 100 } })
  );

  {{camelCase entityPluralName}} = computed(() => this.{{camelCase entityPluralName}}Query.data()?.items || []);
  loading = computed(() => this.{{camelCase entityPluralName}}Query.isLoading());
  error = computed(() => this.{{camelCase entityPluralName}}Query.error()?.message || null);

  previewDialogOpen = signal(false);
  selected{{pascalCase entityName}} = signal<{{pascalCase entityName}}Response | null>(null);

  tableConfig = signal<TableConfig<{{pascalCase entityName}}Response>>({
    columns: [
{{#each columns}}
      { label: '{{this.label}}', field: '{{this.field}}', sortable: {{this.sortable}} },
{{/each}}
    ],
    actions: [
      {
        label: 'Edit',
        icon: `<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>`,
        handler: (row) => this.onEdit(row),
        buttonClass: 'inline-flex items-center p-1 text-gray-600 hover:text-green-600 focus:outline-none',
      },
    ],
    searchable: true,
    searchPlaceholder: 'Search {{lowerCase entityPluralName}}...',
    pageable: true,
    onNew: () => this.router.navigate(['/{{kebabCase entityPluralName}}/new']),
    newButtonLabel: 'Add {{pascalCase entityName}}',
  });

  previewFields = signal<PreviewField[]>([]);

  onEdit(item: {{pascalCase entityName}}Response): void {
    this.router.navigate(['/{{kebabCase entityPluralName}}', item.{{idField}}, 'edit']);
  }

  onRowClick(item: {{pascalCase entityName}}Response): void {
    this.selected{{pascalCase entityName}}.set(item);
    this.previewFields.set([
{{#each previewFields}}
      { label: '{{this.label}}', value: item.{{this.field}} },
{{/each}}
    ]);
    this.previewDialogOpen.set(true);
  }

  closePreview(): void {
    this.previewDialogOpen.set(false);
    this.selected{{pascalCase entityName}}.set(null);
  }
}
